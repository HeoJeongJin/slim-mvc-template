{% extends 'templates/sign.twig' %}

{% block content %}

	<div class='row signup'>
		
		<div class='col-md-4 offset-md-4'>

			<div class='card'>
				<div class='card-header'>Sign up</div>
				<div class='card-body'>

					{# errors 메세지 출력 #}
					{# {{ errors | json_encode }} #}

					<form action="{{ path_for('auth.signup') }}" method='post' autocomplete='off'>
						
						<div class='form-group {{ errors.userid ? ' has-error' : '' }}'>
							<label for='userid'>ID</label>
							<input type='text' name='userid' id='userid' class='form-control' value='{{ old.userid }}'>

							{% if errors.userid %}
								<span class='help-block'>Error message : {{ errors.userid | first }}</span>
							{% endif %}

						</div>

						<div class='form-group {{ errors.email ? ' has-error' : '' }}'>
							<label for='email'>Email</label>
							<input type='email' name='email' id='email' placeholder='you@domain.com' class='form-control' value='{{ old.email }}'>

							{% if errors.email %}
								<span class='help-block'>Error message : {{ errors.email | first }}</span>
							{% endif %}

						</div>

						<div class='form-group {{ errors.name ? ' has-error' : '' }}'>
							<label for='name'>Name</label>
							<input type='text' name='name' id='name' class='form-control' value='{{ old.name }}'>
							{% if errors.name %}
								<span class='help-block'>Error message : {{ errors.name | first }}</span>
							{% endif %}
						</div>

						<div class='form-group {{ errors.password ? ' has-error' : '' }}'>
							<label for='password'>Password</label>
							<input type='password' name='password' id='password' class='form-control' value='{{ old.password }}'>
							{% if errors.password %}
								<span class='help-block'>Error message : {{ errors.password | first }}</span>
							{% endif %}
						</div>
						
						<a class='btn btn-secondary' href='{{ path_for("auth.signin") }}'>Sign in</a>
						<button type='submit' class='btn btn-success'>Sign up</button>
						
						{{ csrf.field | raw }}

					</form>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
